{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug: Run Pipeline",
            "type": "debugpy",
            "request": "launch",
            "module": "src.pipeline.run_pipeline",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "python": "${workspaceFolder}/venv/bin/python",
            "justMyCode": false
        },
        {
            "name": "Debug: Clean Data",
            "type": "debugpy",
            "request": "launch",
            "module": "src.clean.clean_data",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "python": "${workspaceFolder}/venv/bin/python"
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "python": "${workspaceFolder}/venv/bin/python",
            "justMyCode": true
        }
    ]
}